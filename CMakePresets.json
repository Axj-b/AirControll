{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [{
            "name": "default",
            "hidden": false,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "arm-none-eabi-debug",
            "inherits": "default",
            "description": "Debug build for Gateway using GNU ARM compiler",
            "binaryDir": "${sourceDir}/build/arm-none-eabi-debug",
            "toolchainFile": "${sourceDir}/cmake/arm-none-eabi.cmake"
        },
        {
            "name": "arm-none-eabi-release",
            "inherits": "default",
            "description": "Release build for Gateway using GNU ARM compiler",
            "binaryDir": "${sourceDir}/build/arm-none-eabi-release",
            "toolchainFile": "${sourceDir}/cmake/arm-none-eabi.cmake"
        }
    ]
}